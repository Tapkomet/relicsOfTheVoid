<div class="traits">
    <div class="form-group">
        <label>{{localize "ROTV.Size"}}</label>
        <select class="actor-size" name="system.traits.size">
            {{selectOptions config.actorSizes selected=system.traits.size labelAttr="label"}}
        </select>
    </div>

    {{#if isCharacter}}
    <div class="form-group">
        <label>{{localize "ROTV.CreatureType"}}</label>
        {{#if system.details.race.id}}
          <a class="config-button" data-action="type" data-tooltip="ROTV.CreatureTypeConfig">
              <i class="fas fa-cog"></i>
          </a>
        {{/if}}
        <ul class="traits-list">
            {{#if labels.type}}
                <li class="tag">{{labels.type}}</li>
            {{/if}}
        </ul>
    </div>
    {{/if}}

    {{#unless isVehicle}}
    <div class="form-group">
        <label>{{localize "ROTV.Senses"}}</label>
        <a class="config-button" data-action="senses" data-tooltip="ROTV.SensesConfig">
            <i class="fas fa-cog"></i>
        </a>
        <ul class="traits-list">
        {{#each senses as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    {{/unless}}

    <div class="form-group {{traits.traits.ci.cssClass}}">
        <label>{{localize "ROTV.ConImm"}}</label>
        <a class="trait-selector" data-trait="ci"
           data-tooltip="{{localize 'ROTV.TraitConfig' trait=(localize 'ROTV.ConImm')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.ci.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    {{#if isCharacter}}
    <div class="form-group {{traits.traits.weaponProf.cssClass}}">
        <label>{{localize "ROTV.TraitWeaponProf"}}</label>
        <a class="trait-selector" data-trait="weapon"
           data-tooltip="{{localize 'ROTV.TraitConfig' trait=(localize 'ROTV.TraitWeaponProf')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.weaponProf.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    <div class="form-group {{traits.traits.armorProf.cssClass}}">
        <label>{{localize "ROTV.TraitArmorProf"}}</label>
        <a class="trait-selector" data-trait="armor"
           data-tooltip="{{localize 'ROTV.TraitConfig' trait=(localize 'ROTV.TraitArmorProf')}}">
            <i class="fas fa-edit"></i>
        </a>
        <ul class="traits-list">
        {{#each traits.traits.armorProf.selected as |v k|}}
            <li class="tag {{k}}">{{v}}</li>
        {{/each}}
        </ul>
    </div>

    {{/if}}

    {{#unless isVehicle}}
    <div class="form-group ">
        <label>{{localize "ROTV.SpecialTraits"}}</label>
        <a class="config-button" data-action="flags"
           data-tooltip="{{localize 'ROTV.TraitConfig' trait=(localize 'ROTV.SpecialTraits')}}">
            <i class="fas fa-cog"></i>
        </a>
    </div>
    {{/unless}}
</div>

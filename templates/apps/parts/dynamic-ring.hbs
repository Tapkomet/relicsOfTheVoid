<div class="tab" data-group="appearance" data-tab="ring">
    <div class="form-group">
        <label>{{localize "ROTV.TokenRings.Enabled"}}</label>
        <div class="form-fields">
            <input type="checkbox" name="flags.rotv.tokenRing.enabled" {{checked flags.enabled}}>
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "ROTV.TokenRings.Subject.Label"}}</label>
        <div class="form-fields">
            {{filePicker type="image" target="flags.rotv.tokenRing.textures.subject"}}
            <input class="image" type="text" name="flags.rotv.tokenRing.textures.subject"
                   value="{{flags.textures.subject}}" placeholder="{{subjectPlaceholder}}">
        </div>
        <p class="hint">{{localize "ROTV.TokenRings.Subject.Hint"}}</p>
    </div>
    <div class="form-group">
        <label>{{localize "ROTV.TokenRings.ScaleCorrection"}}</label>
        <div class="form-fields">
            {{rangePicker name="flags.rotv.tokenRing.scaleCorrection" value=flags.scaleCorrection
                          min=0.8 max=4 step=0.1}}
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "ROTV.TokenRings.RingColor"}}</label>
        <div class="form-fields">
            {{colorPicker name="flags.rotv.tokenRing.colors.ring" value=flags.colors.ring}}
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "ROTV.TokenRings.BackgroundColor"}}</label>
        <div class="form-fields">
            {{colorPicker name="flags.rotv.tokenRing.colors.background" value=flags.colors.background}}
        </div>
    </div>
    {{#each effects}}
    <div class="form-group">
        <label>{{label}}</label>
        <div class="form-fields">
            <input type="checkbox" name="flags.rotv.tokenRing.effects.{{@key}}" {{checked checked}}>
        </div>
    </div>
    {{/each}}
</div>

<form autocomplete="off">
  <p class="notes">{{localize "ROTV.SkillConfigurationHint"}}</p>
  <div class="form-group">
    <label>{{ localize "ROTV.ProficiencyLevel" }}</label>
    <select name="system.skills.{{skillId}}.value" data-dtype="Number">
      {{selectOptions proficiencyLevels selected=skill.value}}
    </select>
  </div>
  <div class="form-group">
    <label>{{localize "ROTV.AbilityModifier"}}</label>
    <select name="system.skills.{{skillId}}.ability">
      {{selectOptions abilities selected=skill.ability}}
    </select>
  </div>
  <div class="form-group">
    <label>{{localize "ROTV.SkillBonusCheck"}}</label>
    <input name="system.skills.{{skillId}}.bonuses.check" type="text" value="{{skill.bonuses.check}}">
  </div>
  <div class="form-group">
    <label>{{localize "ROTV.SkillBonusPassive"}}</label>
    <input name="system.skills.{{skillId}}.bonuses.passive" type="text" value="{{skill.bonuses.passive}}">
  </div>
  <hr>
  <div class="form-group">
    <label>{{localize "ROTV.BonusAbilitySkill"}}</label>
    <input name="system.bonuses.abilities.skill" type="text" value="{{bonusGlobal}}">
    <p class="notes">{{localize "ROTV.SkillGlobalBonusCheckHint"}}</p>
  </div>
  <button type="submit"><i class="far fa-save"></i> {{ localize "Submit"}}</button>
</form>
